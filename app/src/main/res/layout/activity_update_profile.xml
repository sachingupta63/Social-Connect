<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".UpdateProfileActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Update Profile"
        android:textSize="40sp"
        android:textColor="#009688"
        android:textAlignment="center"
        android:layout_marginBottom="30dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Name"
        android:id="@+id/et_name_upa"
        android:paddingStart="10dp"
        android:drawablePadding="7dp"
        android:drawableStart="@drawable/ic_baseline_person_24"
        android:layout_margin="4dp"
        android:textColor="@color/grey"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Profession"
        android:id="@+id/et_profession_upa"
        android:paddingStart="10dp"
        android:drawablePadding="7dp"
        android:drawableStart="@drawable/ic_baseline_work_24"
        android:layout_margin="4dp"
        android:textColor="@color/grey"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Bio"
        android:id="@+id/et_bio_upa"
        android:paddingStart="10dp"
        android:drawablePadding="7dp"
        android:drawableStart="@drawable/ic_baseline_perm_identity_24"
        android:layout_margin="4dp"
        android:textColor="@color/grey"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Email"
        android:id="@+id/et_email_upa"
        android:paddingStart="10dp"
        android:drawablePadding="7dp"
        android:drawableStart="@drawable/ic_baseline_email_24"
        android:layout_margin="4dp"
        android:textColor="@color/grey"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Websit"
        android:id="@+id/et_website_upa"
        android:paddingStart="10dp"
        android:drawablePadding="7dp"
        android:drawableStart="@drawable/ic_baseline_public_24"
        android:layout_margin="4dp"
        android:textColor="@color/grey"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Save"
        android:id="@+id/btn_save_upa"
        android:textSize="20sp"
        android:backgroundTint="#009688"
        android:layout_marginTop="10dp"
        android:layout_margin="10dp"/>

</LinearLayout>