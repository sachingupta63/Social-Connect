<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        app:cardCornerRadius="7dp"
        android:id="@+id/cv_logout_bs"
        android:elevation="3dp"
        app:cardElevation="10dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Logout"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:drawableStart="@drawable/ic_baseline_power_settings_new_24"
            android:padding="5dp"
            android:paddingStart="10dp"
            android:drawablePadding="10dp"
            android:paddingLeft="10dp"/>



    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        app:cardCornerRadius="4dp"
        android:id="@+id/cv_delete_bs"
        android:elevation="3dp"
        app:cardElevation="10dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Delete"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:drawableStart="@drawable/ic_baseline_delete_24"
            android:padding="5dp"
            android:paddingStart="10dp"
            android:drawablePadding="10dp"
            android:paddingLeft="10dp"/>


<View
    android:layout_width="match_parent"
    android:layout_height="1dp"
    android:background="@color/grey"
    android:layout_marginLeft="15dp"/>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        app:cardCornerRadius="4dp"
        android:id="@+id/cv_privacy_bs"
        android:elevation="3dp"
        app:cardElevation="10dp">
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/grey"
            android:layout_marginLeft="15dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Privacy"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:drawableStart="@drawable/ic_baseline_lbottom_sheet_ock_24"
            android:padding="5dp"
            android:paddingStart="10dp"
            android:drawablePadding="10dp"
            android:paddingLeft="10dp"/>



    </androidx.cardview.widget.CardView>

</LinearLayout>