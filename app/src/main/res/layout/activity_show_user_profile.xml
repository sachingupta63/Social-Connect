<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ShowUserProfileActivity">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="5dp"
        app:cardBackgroundColor="@color/defaul">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="USER PROFILE"
            android:textColor="@color/white"
            android:layout_margin="10dp"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal|center_vertical"/>
    </androidx.cardview.widget.CardView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:gravity="center"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">
        <androidx.cardview.widget.CardView
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:cardPreventCornerOverlap="false"
            app:cardCornerRadius="50dp"
            android:layout_gravity="center_vertical"
            android:elevation="8dp"
            app:cardElevation="10dp">
            <ImageView
                android:id="@+id/iv_profile_show_user"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_baseline_person_24"
                android:scaleType="fitCenter"
                android:clickable="true"/>
        </androidx.cardview.widget.CardView>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <LinearLayout
            android:layout_width="80dp"
            android:id="@+id/lauout_followers_show_user"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:layout_marginStart="7dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:id="@+id/tv_followers_show_user"
                android:layout_marginBottom="2dp"
                android:hint="0"
                android:paddingStart="10dp"
                android:paddingLeft="10dp"
                android:textAlignment="viewStart"
                android:textColor="@color/black"
                android:gravity="start"
                android:textSize="25sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:layout_gravity="center_horizontal"
                android:hint="Followers"
                android:paddingStart="10dp"
                android:paddingLeft="10dp"
                android:textAlignment="viewStart"
                android:textColor="@color/grey"
                android:gravity="start"
                android:textSize="15sp"/>


        </LinearLayout>
        <LinearLayout
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:id="@+id/layout_posts_show_user"
            android:orientation="vertical"
            android:layout_marginStart="7dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:id="@+id/tv_post_show_user"
                android:layout_marginBottom="2dp"
                android:hint="0"
                android:paddingStart="10dp"
                android:paddingLeft="10dp"
                android:textAlignment="viewStart"
                android:textColor="@color/black"
                android:gravity="start"
                android:textSize="25sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:layout_gravity="center_horizontal"
                android:hint="Posts"
                android:paddingStart="10dp"
                android:paddingLeft="10dp"
                android:textAlignment="viewStart"
                android:textColor="@color/grey"
                android:gravity="start"
                android:textSize="15sp"/>


        </LinearLayout>
        </LinearLayout>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:id="@+id/btn_fol_unfol_show_user"
                android:textStyle="bold"
                android:backgroundTint="@color/defaul"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="10dp"
                android:text="Follow"/>
        </LinearLayout>

    </LinearLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:text="Primary Details"
        android:background="@color/grey"
        android:padding="5dp"
        android:paddingStart="40dp"
        android:paddingLeft="40dp"
        android:textAlignment="viewStart"
        android:textColor="@color/black"
        android:gravity="start"
        android:textSize="15sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Name"
        android:textSize="15sp"
        android:layout_marginStart="20dp"
        android:padding="5dp"
        android:layout_marginLeft="20dp"
        android:textColor="@color/grey"
        android:paddingLeft="20dp"
        android:paddingStart="20dp"/>
    <TextView
        android:id="@+id/tv_name_show_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:layout_marginStart="20dp"
        android:padding="5dp"
        android:layout_marginLeft="20dp"
        android:textColor="@color/black"
        android:paddingLeft="20dp"
        android:paddingStart="20dp"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="40dp"
        android:layout_marginBottom="10dp"
        android:background="@color/grey"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bio"
        android:textSize="15sp"
        android:layout_marginStart="20dp"
        android:padding="5dp"
        android:layout_marginLeft="20dp"
        android:textColor="@color/grey"
        android:paddingLeft="20dp"
        android:paddingStart="20dp"/>
    <TextView
        android:id="@+id/tv_bio_show_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:layout_marginStart="20dp"
        android:padding="5dp"
        android:layout_marginLeft="20dp"
        android:textColor="@color/black"
        android:paddingLeft="20dp"
        android:paddingStart="20dp"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="40dp"
        android:layout_marginBottom="10dp"
        android:background="@color/grey"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Email"
        android:textSize="15sp"
        android:layout_marginStart="20dp"
        android:padding="5dp"
        android:layout_marginLeft="20dp"
        android:textColor="@color/grey"
        android:paddingLeft="20dp"
        android:paddingStart="20dp"/>
    <TextView
        android:id="@+id/tv_email_show_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:layout_marginStart="20dp"
        android:padding="5dp"
        android:layout_marginLeft="20dp"
        android:textColor="@color/black"
        android:paddingLeft="20dp"
        android:paddingStart="20dp"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="40dp"
        android:layout_marginBottom="10dp"
        android:background="@color/grey"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Profession"
        android:textSize="15sp"
        android:layout_marginStart="20dp"
        android:padding="5dp"
        android:layout_marginLeft="20dp"
        android:textColor="@color/grey"
        android:paddingLeft="20dp"
        android:paddingStart="20dp"/>
    <TextView
        android:id="@+id/tv_profession_show_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:layout_marginStart="20dp"
        android:padding="5dp"
        android:layout_marginLeft="20dp"
        android:textColor="@color/black"
        android:paddingLeft="20dp"
        android:paddingStart="20dp"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="40dp"
        android:layout_marginBottom="10dp"
        android:background="@color/grey"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Website"
        android:textSize="15sp"
        android:layout_marginStart="20dp"
        android:padding="5dp"
        android:layout_marginLeft="20dp"
        android:textColor="@color/grey"
        android:paddingLeft="20dp"
        android:paddingStart="20dp"/>
    <TextView
        android:id="@+id/tv_website_show_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:textSize="15sp"
        android:layout_marginStart="20dp"
        android:padding="5dp"
        android:layout_marginLeft="20dp"
        android:textColor="@color/teal_700"
        android:paddingLeft="20dp"
        android:paddingStart="20dp"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="40dp"
        android:layout_marginBottom="30dp"
        android:background="@color/grey"/>

    <TextView
        android:id="@+id/tv_error_show_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Website"
        android:clickable="true"
        android:textSize="15sp"
        android:layout_marginStart="20dp"
        android:padding="5dp"
        android:layout_marginLeft="20dp"
        android:textColor="@color/teal_700"
        android:visibility="gone"
        android:paddingLeft="20dp"
        android:paddingStart="20dp"/>










</LinearLayout>