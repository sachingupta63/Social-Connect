<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".PrivacyActivity">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:cardBackgroundColor="#009688"
        android:layout_marginBottom="100dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Accout Status"
            android:textSize="25sp"
            android:drawableStart="@drawable/ic_baseline_keyboard_arrow_left_24"
            android:layout_gravity="center_vertical"
            android:paddingLeft="5dp"
            android:paddingStart="5dp"
            android:drawablePadding="5dp"/>


    </androidx.cardview.widget.CardView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Account privacy"
        android:textSize="25sp"
        android:layout_marginStart="40dp"
        android:padding="5dp"
        android:layout_marginLeft="40dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Public"
        android:textSize="18sp"
        android:layout_marginStart="50dp"
        android:padding="5dp"
        android:id="@+id/tv_status_pa"
        android:textColor="#009688"
        android:layout_marginLeft="10dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="50dp"
        android:gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Status"
            android:id="@+id/tv_privacy_ststus_pa"
            />
        <Spinner
            android:layout_width="200dp"
            android:elevation="3dp"
            android:backgroundTint="#009688"
            android:layout_marginLeft="10dp"
            android:textAlignment="center"
            android:layout_height="wrap_content"
            android:id="@+id/spinner_status_pa"
            android:layout_gravity="center"/>
    </LinearLayout>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Save Status"
        android:textAllCaps="false"
        android:textSize="20sp"
        android:id="@+id/btn_save_status_pa"
        android:layout_margin="20dp"
        android:backgroundTint="#009688"
        android:textStyle="bold"/>





</LinearLayout>